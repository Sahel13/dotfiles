! Reference: https://wiki.archlinux.org/title/Xmodmap#Reassigning_modifiers_to_keys_on_your_keyboard
!
! Swap Caps_Lock and Control_L
!
clear lock
remove control = Control_L
keysym Caps_Lock = Control_L
keysym Control_L = Caps_Lock
add lock = Caps_Lock
add control = Control_L
!
! Swap Alt and Win (for PC keyboard)
!
! remove mod1 = Alt_L
! remove mod4 = Super_L
! keysym Alt_L = Super_L
! keysym Super_L = Alt_L
! add mod1 = Alt_L
! add mod4 = Super_L
